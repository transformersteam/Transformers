
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>设置关注人</title>
    <script src="~/js/jquery-3.3.1.js"></script>
    <script src="~/layui-v2.4.5/layui/layui.js"></script>
    <link href="~/layui-v2.4.5/layui/css/layui.css" rel="stylesheet" />
</head>
<body>
    <table class="layui-table">
        <tr>
            <td>角色姓名</td>
            <td><input id="txtName" type="text" v-model="RoleName" /></td>
        </tr>
        <tr>
            <td>所属部门</td>
            <td>
                <select id="roleo" lay-verify="" lay-search v-model="RolePid">
                    <option v-for="item in rolesOList" :value="item.roleId">{{item.roleName}}</option>
                </select>
            </td>
        </tr>
        <tr>
            <td>角色描述</td>
            <td><input id="txtContext" type="text" v-model="RoleContent" /></td>
        </tr>
        <tr>
            <td>选择权限</td>
            <td><span v-for="item in power"><input id="Checkbox1" type="checkbox" :value="item.powerId" v-on:click="GetPowerId(item.powerId)" /><label>{{item.powerName}}</label></span></td>
        </tr>
        <tr>
            <td></td>
            <td><input id="Button1" type="button" value="添加" class="layui-btn layui-btn-normal" v-on:click="AddRole(RoleName, RolePid, RoleContent)" /></td>
        </tr>
    </table>
</body>
</html>
