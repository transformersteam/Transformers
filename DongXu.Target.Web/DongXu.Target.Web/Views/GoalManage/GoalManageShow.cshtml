                    <tr>
                        <td>月份</td>
                        <td>1月</td>
                        <td>1-2月</td>
                        <td>1-3月</td>
                        <td>1-4月</td>
                        <td>1-5月</td>
                        <td>1-6月</td>
                        <td>1-7月</td>
                        <td>1-8月</td>
                        <td>1-9月</td>
                        <td>1-10月</td>
