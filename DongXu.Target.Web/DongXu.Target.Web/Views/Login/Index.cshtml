
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta http-equiv="Pragma" content="no-cache">
    <meta http-equiv="Cache-Control" content="no-cache">
    <meta http-equiv="Expires" content="0">
    <title>后台管理</title>
    <link href="~/Login/login.css" rel="stylesheet" />
</head>

<body>
    <div class="login_box">
        <div class="login_l_img"><img src="~/Login/images/login-img.png" /></div>
        <div class="login">
            <div class="login_logo"><a href="#"><img src="~/Login/images/login_logo.png" /></a></div>
            <div class="login_name">
                <p>后台管理系统</p>
            </div>
                <input id="txtName" name="username" type="text" value="用户名" onfocus="this.value=''" onblur="if(this.value==''){this.value='用户名'}">
                <span id="password_text" onclick="this.style.display='none';document.getElementById('password').style.display='block';document.getElementById('password').focus().select();">密码</span>
                <input  name="password" type="password" id="password" style="display:none;" onblur="if(this.value==''){document.getElementById('password_text').style.display='block';this.style.display='none'};" />
                <input value="登录" style="width:100%;" type="button"  onclick="login()">


        </div>
    </div>
</body>
</html>

@*<input id="Button1" type="button" onclick="login()" value="登录" />*@
<script src="~/lib/jquery/dist/jquery.js"></script>
<script>
    login = function () {
        var Name = $("#txtName").val();
        var Pwd = $("#password").val();
        $.ajax({
            type: "post",
            url: "/Login/LoginIn",
            data: { name: Name, pwd: Pwd },
            async: false,
            success: function (result) {
                if (result == 0) {
                    alert("失败，用户名或密码错误！");
                }
                else {
                    location.href = "/Home";

                }
            }
        })
    }


</script>
