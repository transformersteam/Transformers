
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>RoleIndex</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <script src="~/js/vue.js"></script>
    <script src="~/js/axios.js"></script>
    <style>
        #max {
            width: 1500px;
            height: 600px;
            margin-left: 30px;
        }

        #query {
            width: 100%;
            height: 15%;
            margin-bottom: 10px;
        }

        #management {
            width: 100%;
            height: 75%;
        }

            #management table {
                width: 1200px;
            }
    </style>
</head>
<body>
    <div id="max">
        <div id="query">
            <table>
                <tr>
                    <td>查询条件</td>
                </tr>
                <tr>
                    <td>角色名称:</td>
                    <td><input id="Text1" type="text" /></td>
                    <td style="float:right"><input id="Button1" type="button" value="查询" /><input id="Button1" type="button" value="新增" /></td>
                </tr>
            </table>
        </div>
        <div id="management">
            <div style="width:100%;height:20px;">角色管理</div>
            <table class="table-striped">
                <tr>
                    <td>角色名称</td>
                    <td>描述信息</td>
                    <td>操作</td>
                </tr>
                <tr v-for="item in rolelist">
                    <td>{{item.roleName}}</td>
                    <td>{{item.roleContent}}</td>
                    <td><input id="Button1" type="button" value="删除" /></td>
                </tr>
            </table>
        </div>
    </div>
</body>
</html>
<script>
    var vm = new Vue({
        el: "#max",
        data: {
            rolelist:[]
        },
        created() {
            this.GetRoleRList();
        },
        methods: {
            GetRoleRList: function () {
                axios.get("/Organization/GetRolesRList").then((response) => {
                    console.log(response);
                    this.rolelist = response.data;
                });
            }
        }
    })

</script>
