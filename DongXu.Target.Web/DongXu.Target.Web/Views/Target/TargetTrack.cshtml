
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>TargetTrack</title>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/echars/echarts.js"></script>
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
</head>
<body>





    <div class="panel panel-primary" style="height:500px;width:100%">
        <div class="panel-heading">目标完成率</div>
        <div id="main" style="width:50%;height:450px; float:left"></div>
        <div id="mains" style="width:50%;height:450px;float:right"></div>
    </div>
    <div class="panel panel-primary" style="height:265px;width:100%">
        <div class="panel-heading">目标完成率排名</div>
        <table class="table table-striped">
            <tr>
                <td>
                    单位（集团）
                </td>
                <td>
                    目标总数量
                </td>
                <td>
                    已完成目标数量（延期完成）
                </td>
                <td>
                    完场比例
                </td>
                <td>
                    排名
                </td>
            </tr>
            <tbody id="tabcontainer"></tbody>
        </table>
    </div>

    <div id="mains" style="width:100%;height:450px;"></div>


</body>
</html>
<script>
    //app.title = '坐标轴刻度与标签对齐';
    //app.title = '极坐标系下的堆叠柱状图';
    var myCharty = echarts.init(document.getElementById('main'));
    var myChartys = echarts.init(document.getElementById('mains'));

    $(function () {
        banding();
        table();
    })

    //显示下拉列表
    function table() {
        var i = 0;
        $.ajax({
            url: "http://localhost:8888/api/Target/TargetTrackList",
            success: function (data) {
                console.log(data);
                $(data).each(function () {
                    i++;
                    $("#tabcontainer").append('<tr>'
                       +'<td>' + this.role_Name + '</td>'
                       +'<td>' + this.num + '</td>'
                       +'<td>' + this.done +'</td>'
                       +'<td>' + this.percentage + '%</td>'
                       +'<td>' +i+'</td></tr>')

                })
            }
            })


    }

    //绑定图形
    function banding() {
        var namedata = [];
        var valuedata = [];
        $.ajax({
            url: "http://localhost:8888/api/Target/TargetTrackList",
            success: function (data) {
                console.log(data);
                $(data).each(function () {
                    namedata.push(this.role_Name);
                    valuedata.push(this.percentage);
                })
                option = {
                    color: ['#3398DB'],
                    tooltip: {
                        trigger: 'axis',
                        formatter: '{c}%',
                        axisPointer: {            // 坐标轴指示器，坐标轴触发有效
                            type: 'shadow'        // 默认为直线，可选为：'line' | 'shadow'
                        }
                    },
                    grid: {
                        left: '3%',
                        right: '4%',
                        bottom: '3%',
                        containLabel: true
                    },
                    xAxis: [
                        {
                            type: 'category',
                            data: namedata,
                            axisTick: {
                                alignWithLabel: true
                            }
                        }
                    ],
                    yAxis: [
                        {
                            type: 'value',
                            min: 0,
                            max: 100,
                            interval: 10,
                                axisLabel: {
                                    formatter: '{value}%'
                            }
                        }
                    ],
                    series: [
                        {
                            //////
                            name: 'ECharts例子个数统计',
                            type: 'bar',
                            barWidth: '40%',
                            itemStyle: {
                                normal: {
                                    color: function (params) {
                                        // build a color map as your need.
                                        var colorList = [
                                            '#C1232B', '#B5C334', '#FCCE10', '#E87C25', '#27727B',
                                            '#FE8463', '#9BCA63', '#FAD860', '#F3A43B', '#60C0DD',
                                            '#D7504B', '#C6E579', '#F4E001', '#F0805A', '#26C0C0'
                                        ];
                                        return colorList[params.dataIndex]
                                    },
                                    label: {
                                        show: true,
                                        position: 'top',
                                        formatter: '{b}\n{c}%'　　　　//这是关键，在需要的地方加上就行了
                                    }
                                }
                            },
                            data: valuedata
                        }
                    ]
                };
                options = {
                    title: {
                        text: '东旭集团子公司目标完成情况'
                    },
                    tooltip: {
                        trigger: 'axis',
                        formatter: '{c}%',
                        axisPointer: {
                            type: 'shadow'
                        }
                    },
                    legend: {
                        data: ['2011年', '2012年']
                    },
                    grid: {
                        left: '3%',
                        right: '4%',
                        bottom: '3%',
                        containLabel: true
                    },
                    xAxis: {
                        type: 'value',
                        boundaryGap: [0, 0.01],
                        min: 0,
                        max: 100,
                        interval: 10,
                        axisLabel: {
                            formatter: '{value}%'
                        }
                    },
                    yAxis: {
                        type: 'category',
                        data: namedata

                    },
                    series: [
                        {
                            //////
                            name: 'ECharts例子个数统计',
                            type: 'bar',
                            barWidth: '40%',
                            itemStyle: {
                                normal: {
                                    color: function (params) {
                                        // build a color map as your need.
                                        var colorList = [
                                            '#C1232B', '#B5C334', '#FCCE10', '#E87C25', '#27727B',
                                            '#FE8463', '#9BCA63', '#FAD860', '#F3A43B', '#60C0DD',
                                            '#D7504B', '#C6E579', '#F4E001', '#F0805A', '#26C0C0'
                                        ];
                                        return colorList[params.dataIndex]
                                    },
                                    label: {
                                        show: true,
                                        position: 'top',
                                        formatter: '{b}\n{c}%'　　　　//这是关键，在需要的地方加上就行了
                                    }
                                }
                            },
                            data: valuedata
                        }

                    ]
                };
                myCharty.setOption(option);
                myChartys.setOption(options);

            }
        })

    }







    





</script>